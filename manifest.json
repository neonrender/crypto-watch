{
  "name": "Page Redder",
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "version": "0.1",
  "description": "Turns the page red when you click the icon",
  "permissions": [
    "storage",
    "scripting",
    "notifications"
  ],
  "icons": {
    "128": "assets/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
